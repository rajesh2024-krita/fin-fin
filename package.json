{
  "name": "fintcs-finance-system",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "frontend:install": "cd Frontend && npm install",
    "frontend:dev": "cd Frontend && ng serve --host 0.0.0.0 --port 4200",
    "frontend:build": "cd Frontend && ng build",
    "backend:restore": "cd Backend && dotnet restore",
    "backend:dev": "cd Backend && dotnet run --urls=http://0.0.0.0:5000",
    "backend:build": "cd Backend && dotnet build",
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "install:all": "npm run frontend:install && npm run backend:restore"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}